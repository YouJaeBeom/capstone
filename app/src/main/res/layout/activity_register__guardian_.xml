<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_Guardian_Activity">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID" />

        <EditText
            android:id="@+id/ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="74dp" />

        <TextView
            android:id="@+id/textView7"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PW" />

        <EditText
            android:id="@+id/PW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PW"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="130dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />

        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="188dp" />

        <TextView
            android:id="@+id/textView9"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone" />

        <EditText
            android:id="@+id/Phone"
            android:layout_width="426dp"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="261dp" />
        <TextView
            android:id="@+id/textView10"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ward_ID" />

        <EditText
            android:id="@+id/Ward_ID"
            android:layout_width="426dp"
            android:layout_height="wrap_content"
            android:hint="Ward ID"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="261dp" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Register_btn"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="@android:dimen/app_icon_size"
                    android:gravity="center"
                    android:text="Register_btn"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Back_btn"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:gravity="center"

                    android:text="Back_btn"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>